@model Grupo8_Proyecto.Usuario

@{
    ViewBag.Title = "Crear Usuario";
}

<h2>Crear Nuevo Usuario</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}

@using (Html.BeginForm("Create", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.usu_id, "Identificación", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usu_id, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese el número de identificación", @type = "number", @min = "1" } })
                @Html.ValidationMessageFor(model => model.usu_id, "", new { @class = "text-danger" })
                <small class="form-text text-muted">Debe ser un número entero positivo único (ej: cédula)</small>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usu_nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.usu_nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese el nombre del usuario", @maxlength = "100" } })
                @Html.ValidationMessageFor(model => model.usu_nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear Usuario" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}